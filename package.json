{
  "name": "webact",
  "version": "0.2.6",
  "description": "A framework for efficiently handling web components",
  "type": "module",
  "module": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/enjikaka/webact"
  },
  "scripts": {
    "test": "npm run build && npm run prepare-docs && http-server docs -p 1444",
    "build": "npx @pika/pack",
    "release": "npm version patch && npm run build && cd pkg && npm publish && cd ../ && git push --follow-tags",
    "prepare-docs": "cp pkg/dist-web/index.bundled.js docs/webact.js"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-bundle-web"
      ]
    ]
  },
  "keywords": [
    "web",
    "web",
    "component",
    "react",
    "vue",
    "preact",
    "es6"
  ],
  "author": "Jeremy Karlsson <karlsson@jeremy.se>",
  "license": "MIT",
  "devDependencies": {
    "@pika/plugin-build-types": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-bundle-web": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "eslint": "^6.8.0",
    "eslint-config-tidal": "^1.2.0",
    "http-server": "^0.12.1"
  },
  "dependencies": {
    "construct-style-sheets-polyfill": "^2.3.5"
  }
}
